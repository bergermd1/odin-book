<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<body>
    <h1>Welcome<% if (typeof user !== 'undefined') { %>
        <%=user.username%>
        </h1>
        <% if (user.friendRequests.length > 0) { %>
            <h2>Friend Requests:</h2>
            <ul>
                <% user.friendRequests.map(requestUser => { %>
                    <li><a href="/acceptRequest/<%=requestUser.id%>"><%=requestUser.username%></a></li>
                <% }) %>
            </ul>
        <% } %>
        <br>
        <a href="/profile/<%=user.username%>">My profile</a>
        <br>
        <a href="/userSearch">User search</a>
        <br>
        <a href="/logout">Logout</a>
    <% } else { %>
        </h1>
        <br>
        <a href="/register">Register</a>
        <br>
        <a href="/login">Login</a>
        <br>
    <% } %>
</body>
</html>